{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "bst",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.3",
  "engines": {
    "node": ">=20.x",
    "pnpm": ">=8.x"
  },
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "analyze": "npx nuxi analyze",
    "start": "nuxt start",
    "preview": "nuxt preview",
    "generate": "nuxt generate",
    "--------------------------------------------------------------------------------": "",
    "lint": "eslint . --fix",
    "typecheck": "vue-tsc --noEmit",
    "----------------------------------------------------------------------------------": "",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "@pinia/nuxt": "0.5.1",
    "pinia": "2.1.7"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.11.5",
    "@nuxt/types": "2.17.3",
    "@types/node": "20.11.30",
    "eslint": "8.57.0",
    "eslint-plugin-format": "^0.1.0",
    "nuxt": "3.11.1",
    "sass": "1.72.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "5.4.3",
    "vite-svg-loader": "^5.1.0",
    "vue-tsc": "^2.0.7"
  },
  "simple-git-hooks": {
    "pre-commit": "cd web && pnpm dlx lint-staged && npm run typecheck",
    "post-commit": "git status",
    "post-merge": "cd web && pnpm i"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
